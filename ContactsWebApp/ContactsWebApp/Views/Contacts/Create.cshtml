@model ContactsWebApp.Models.Contact

@{
    ViewData["title"] = "Create Contact";
}

<h2>@ViewData["title"]</h2>
<hr />

<div id="CreateContact" class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input  id="Name" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input id="Comment" asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Cell" class="control-label"></label>
                <input id="Cell" asp-for="Cell" class="form-control" />
                <span asp-validation-for="Cell" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Group" class="control-label"></label>
                <select id="Group" asp-for="Group" asp-items="@Model.GroupNames"></select>
            </div>
            
            <div class="form-group">
                <input id="btnCreate" type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div><a id="btnBack" class="backToList" asp-action="Index">Back to List</a></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
